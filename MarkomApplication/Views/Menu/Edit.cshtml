@model ViewModel.Project.VMMenu

@{
    ViewBag.Title = "Edit";
}

<form style="color:#343a40">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-4">
                <label>*Menu Code</label>
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", placeholder = "Auto Generated" } })
                <span class="validasiAlert validasi1" style="color:red;font-size:smaller">*Harus diisi !!</span>
            </div>
        </div>
        <div class="row" style="padding-top:10px">
            <div class="col-md-4">
                <label>*Menu Name</label>
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Type Unit Name" } })
                <span class="validasiAlert validasi2" style="color:red;font-size:smaller">*Harus diisi !!</span>
            </div>
        </div>
        <div class="row" style="padding-top:10px">
            <div class="col-md-4">
                <label>*Controller Name</label>
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.controller, new { htmlAttributes = new { @class = "form-control", placeholder = "Type Description" } })
                <span class="validasiAlert validasi2" style="color:red;font-size:smaller">*Harus diisi !!</span>
            </div>
        </div>
        <div class="row" style="padding-top:10px">
            <div class="col-md-4">
                <label>Parent</label>
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.parent_id, new { htmlAttributes = new { @class = "form-control", placeholder = "Type Parent" } })
               
            </div>
        </div>
        <div class="row" style="padding-top:35px">
            <div class="col-md-12">
                @Html.HiddenFor(model => model.id)
                <button type="button" class="btn btn-block bg-gradient-warning" style="width:80px; float:right" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-block btn-primary" id="edit_product_save" style="width:80px; float:right; margin-top:0%; margin-right:5px">Update</button>
            </div>
        </div>
    </div>
</form>

