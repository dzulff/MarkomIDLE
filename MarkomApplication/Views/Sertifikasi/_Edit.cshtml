<style>
    .form-control {
        border: 1px solid #191970;
    }
</style>

@model ViewModel.Project.VMSertifikasi

@using (Html.BeginForm("Edit", "Sertifikasi", FormMethod.Post, new { @id = "id_Form_Edit" }))
{

    @Html.HiddenFor(a => a.id)

    <div class="from-group row">
        <div class="from-group col-sm-6">
            <label for="certificate_name">Nama Sertifikasi*</label>
            <input type="text" class="form-control" id="certificate_name" name="certificate_name" value="@Model.certificate_name" required oninvalid="this.setCustomValidity('Data Tidak Boleh Kosong')"
                   oninput="setCustomValidity('')">
        </div>
        <div class="from-group col-sm-6">
            <label for="publisher">Penerbit*</label>
            <input type="text" class="form-control" id="publisher" name="publisher" value="@Model.publisher" required oninvalid="this.setCustomValidity('Data Tidak Boleh Kosong')"
                   oninput="setCustomValidity('')">
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <label for="valid_start_month">Berlaku Mulai</label>
        </div>
        <div class="col-sm-6">
            <label for="until_month">Berlaku Sampai</label>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3">
            <select class="form-control" id="valid_start_month" name="valid_start_month">
                <option selected>@Model.valid_start_month</option>
                <option value="1">Januari</option>
                <option value="2">Februari</option>
                <option value="3">Maret</option>
                <option value="4">April</option>
                <option value="5">Mei</option>
                <option value="6">Juni</option>
                <option value="7">Juli</option>
                <option value="8">Agustus</option>
                <option value="9">September</option>
                <option value="10">Oktober</option>
                <option value="11">November</option>
                <option value="12">Desember</option>
            </select>
        </div>
        <div class="col-sm-3">
            <select class="form-control" id="valid_start_year" name="valid_start_year">
                <option selected>@Model.valid_start_year</option>
                <option value="2000">2000</option>
                <option value="2001">2001</option>
                <option value="2002">2002</option>
                <option value="2003">2003</option>
                <option value="2004">2004</option>
                <option value="2005">2005</option>
                <option value="2006">2006</option>
                <option value="2007">2007</option>
                <option value="2008">2008</option>
                <option value="2009">2009</option>
                <option value="2010">2010</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015">2015</option>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2019">2019</option>
                <option value="2020">2020</option>
                <option value="2021">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
            </select>
        </div>

        <div class="col-sm-3">
         
            <select class="form-control" id="until_month" name="until_month">
                <option selected>@Model.until_month</option>
                <option value="1">Januari</option>
                <option value="2">Februari</option>
                <option value="3">Maret</option>
                <option value="4">April</option>
                <option value="5">Mei</option>
                <option value="6">Juni</option>
                <option value="7">Juli</option>
                <option value="8">Agustus</option>
                <option value="9">September</option>
                <option value="10">Oktober</option>
                <option value="11">November</option>
                <option value="12">Desember</option>
            </select>
        </div>
        <div class="col-sm-3">
        
            <select class="form-control" id="until_year" name="until_year">
                <option selected>@Model.until_year</option>
                <option value="2000">2000</option>
                <option value="2001">2001</option>
                <option value="2002">2002</option>
                <option value="2003">2003</option>
                <option value="2004">2004</option>
                <option value="2005">2005</option>
                <option value="2006">2006</option>
                <option value="2007">2007</option>
                <option value="2008">2008</option>
                <option value="2009">2009</option>
                <option value="2010">2010</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015">2015</option>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2019">2019</option>
                <option value="2020">2020</option>
                <option value="2021">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
            </select>
        </div>
    </div>

    <div class="form-group-lg">
        <div class="form-group col-sm-pull-12">
            <label for="notes">Catatan</label>
            <input type="text" class="form-control" id="notes" name="notes" value="@Model.notes">
        </div>
    </div>

    <div class="modal-footer" col-4 col-sm-6>
        <button id="button" class="btn" data-dismiss="modal" style="background-color:orange; color:white">Batal</button>
        <button id="btn_submit" type="submit" class="btn btn-primary">Simpan</button>
    </div>
}


